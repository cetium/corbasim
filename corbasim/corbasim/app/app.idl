module corbasim
{
module app
{

    struct ObjrefConfig
    {
        string id;
        string interface;       // FQN
        string entry;           // Naming service entry (for resolving)
        Object ref;
    };

    typedef sequence< ObjrefConfig > ObjrefConfigSeq;

    struct ServantConfig
    {
        string id;
        string interface;       // FQN
        string entry;           // Naming service entry (for binding)
        string behaviour;
    };
    
    typedef sequence< ServantConfig > ServantConfigSeq;

    struct Configuration
    {
        ServantConfigSeq servants; 
        ObjrefConfigSeq objects; 
    };

}; // app
}; // corbasim

